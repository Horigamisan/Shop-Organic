@model IEnumerable<WebDemo.Models.ListCategories>

<div class="row">
    <div class="col-lg-12">
        <div class="section-title">
            <h2>Sản phẩm đáng chú ý</h2>
        </div>
        <div class="featured__controls">
            <ul>
                <li class="active" data-filter="*">Tất cả</li>
                @foreach (var i in Model)
                {
                    <li data-filter=".data_name-@i.id">@i.name</li>
                }
            </ul>
        </div>
    </div>
</div>
<div class="row featured__filter">
    @foreach (var i in Model)
    {
        Html.RenderAction("getProducts", "Default", new { id = @i.id, meta = ViewBag.meta });
    }
</div>
