@model IEnumerable<WebDemo.Models.Banner>

<div id="carouselBanner" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#carouselBanner" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }

    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var banner = Model.ElementAt(i);
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="hero__item set-bg" data-setbg=/Uploads/img/hero/@banner.img>
                    <div class="hero__text">
                        <span>@banner.name</span>
                        <h2>@Html.Raw(banner.description)</h2>
                        <p>@banner.main_description</p>
                        <a href="#" class="primary-btn">MUA NGAY</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselBanner" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselBanner" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>