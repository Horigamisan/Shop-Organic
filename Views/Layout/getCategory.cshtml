@model IEnumerable<WebDemo.Models.ListCategories>

<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>Các phân loại</span>
        </div>
        <ul>
            @foreach(var i in Model)
            {
                <li> <a href="/@ViewBag.meta/@i.meta/">@i.name</a></li>
            }
        </ul>
    </div>
</div>