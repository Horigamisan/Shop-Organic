@model WebDemo.Models.Blogs

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<section class="blog-details-hero set-bg" data-setbg="/Uploads/img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>@Model.name</h2>
                    <ul>
                        <li>Tác giả: @Model.author</li>
                        <li>@Model.dateupload</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blog Details Section Begin -->
<section class="blog-details spad mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Tìm kiếm...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>

                    @{Html.RenderAction("GetBlogCategories", "Blog");}
                    @{Html.RenderAction("GetRecentNews", "Blog");}
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1 mt-5">
                <div class="blog__details__text">
                    <img src="~/Uploads/img/blog/@Model.img" alt="" width="500" height="400" class="mx-auto">
                    @Html.Raw(Model.detail)

                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__pic">
                                    <img src="~/Uploads/img/blog/details/details-author.jpg" alt="">
                                </div>
                                <div class="blog__details__author__text">
                                    <h6>@Model.author</h6>
                                    <span>Người đóng góp</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Thể loại:</span> @ViewBag.category.name</li>
                                    <li><span>Tags:</span> All, Trending, Cooking, Healthy Food, Life Style</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->

@{Html.RenderAction("GetRelatedBlog", "Blog", new { id = Model.id, categoryid = ViewBag.category.id });}

