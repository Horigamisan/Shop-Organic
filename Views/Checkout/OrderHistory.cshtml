@model IEnumerable<WebDemo.Models.Orders>

@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Uploads/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Lịch sử mua hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Trang chủ</a>
                        <span>Lịch sử mua hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Mã đơn hàng</th>
                                <th>Tên khách hàng</th>
                                <th>Ngày đặt hàng</th>
                                <th>Địa chỉ giao hàng</th>
                                <th>Trạng thái</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr class="cartItemsLoop">
                                        <td class="shoping__cart__item">
                                            <h5>@item.OrderID</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.NameCustomer</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.OrderDate</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.ShippingAddress</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.PaymentStatus</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.TotalAmount VNĐ</h5>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">TIẾP TỤC MUA HÀNG</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right" id="updateCartBtn">
                        <span class="icon_loading"></span>
                        Cập nhật lịch sử
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
