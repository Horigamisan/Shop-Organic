@model WebDemo.Models.menu

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- DataTales Example -->
        <div class="card border-danger shadow mb-4">
            <div class="card-header bg-danger py-3">
                <h6 class="m-0 font-weight-bold text-white">Thông tin menu</h6>
            </div>
            <div class="card-body">

                <div class="form-horizontal">
                    <div class="row form-group">
                        @Html.Label("Tên menu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.name)
                        </div>
                    </div>

                    <div class="row form-group">
                        @Html.Label("Link", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.link)
                        </div>
                    </div>

                    <div class="row form-group">
                        @Html.Label("Meta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.meta)
                        </div>
                    </div>

                    <div class="row form-group">
                        @Html.Label("Hiển thị", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="checkbox">
                            @{
                                bool hide = (Model.hide.GetValueOrDefault(false) ? true : false);
                            }
                            @Html.CheckBoxFor(model => hide, new
                            {
                                style = "margin: -1px 5px",
                                disabled = "disabled"
                            })
                            @Html.ValidationMessageFor(model => model.hide, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        @Html.Label("Thứ tự", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.order)
                        </div>
                    </div>

                    <div class="row form-group">
                        @Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.datebegin)
                        </div>
                    </div>


                    <p>
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
                        @Html.ActionLink("Trở về danh sách", "Index")
                    </p>

                </div>
                </div>
            </div>
        </div>
    </div>

                    
