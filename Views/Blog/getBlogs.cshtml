@model PagedList.IPagedList<WebDemo.Models.Blogs>
@using PagedList.Mvc;

<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="blog__item">
                <div class="blog__item__pic">
                    <img src="~/Uploads/img/blog/@i.img" alt="">
                </div>
                <div class="blog__item__text">
                    <ul>
                        <li><i class="fa fa-calendar-o"></i> @i.dateupload</li>
                        <li><i class="fa fa-comment-o"></i> @i.comments</li>
                    </ul>
                    <h5><a href="/blog/@i.meta/@i.id">@i.name</a></h5>
                    <p>
                        @i.description
                    </p>
                    <a href="/blog/@i.meta/@i.id" class="blog__btn">CHI TIẾT <span class="arrow_right"></span></a>
                </div>
            </div>
        </div>
    }

    <div class="col-lg-12 d-flex justify-content-center">
        <div class="product__pagination blog__pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</div>