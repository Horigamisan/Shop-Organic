@model IEnumerable<WebDemo.Models.Blogs>

<div class="blog__sidebar__item">
    <h4>Tin mới nhất</h4>
    @foreach (var i in Model)
    {
        <div class="blog__sidebar__recent my-2">
            <a href="/blog/@i.meta/@i.id" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                    <img src="~/Uploads/img/blog/@i.img" style="width:70px; height:70px" alt="">
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h6>@i.name</h6>
                    <span>@i.dateupload</span>
                </div>
            </a>

        </div>
    }
</div>