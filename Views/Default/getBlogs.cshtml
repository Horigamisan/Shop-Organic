@model IEnumerable<WebDemo.Models.Blogs>

<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Từ Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var i in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="~/Uploads/img/blog/@i.img" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @i.dateupload</li>
                                <li><i class="fa fa-comment-o"></i> @i.comments</li>
                            </ul>
                            <h5><a href="/blog/@i.meta/@i.id">@i.name</a></h5>
                            <p>@i.description </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
